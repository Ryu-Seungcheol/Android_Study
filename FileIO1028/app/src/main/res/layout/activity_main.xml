<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="파일에 저장할 내용을 입력하세요."
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력 :"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/output"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:ems="10"
        android:gravity="center|left"
        android:hint="파일 내용을 출력합니다."
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.642" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출력 :"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.638" />

    <Button
        android:id="@+id/button"
        android:layout_width="257dp"
        android:layout_height="41dp"
        android:onClick="intMemWrite"
        android:text="내장메모리 파일 쓰기"
        android:textColor="#7C7B7B"
        app:backgroundTint="#F3F0F0"
        app:backgroundTintMode="add"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <Button
        android:id="@+id/button2"
        android:layout_width="257dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:onClick="intMemRead"
        android:text="내장메모리 파일 읽기"
        android:textColor="#7C7B7B"
        app:backgroundTint="#F3F0F0"
        app:backgroundTintMode="add"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="257dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:onClick="extMemWrite"
        android:text="외장메모리 파일 쓰기"
        android:textColor="#7C7B7B"
        app:backgroundTint="#F3F0F0"
        app:backgroundTintMode="add"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="257dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:onClick="extMemRead"
        android:text="외장메모리 파일 읽기"
        android:textColor="#7C7B7B"
        app:backgroundTint="#F3F0F0"
        app:backgroundTintMode="add"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="257dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:onClick="rawMemRead"
        android:text="RAW 파일 읽기"
        android:textColor="#7C7B7B"
        app:backgroundTint="#F3F0F0"
        app:backgroundTintMode="add"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

</androidx.constraintlayout.widget.ConstraintLayout>